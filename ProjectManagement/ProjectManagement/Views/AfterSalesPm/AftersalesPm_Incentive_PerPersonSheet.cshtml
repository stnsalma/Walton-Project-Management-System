@using System.Diagnostics
@using System.Web.Mvc.Html
@model ProjectManagement.ViewModels.AftersalesPm.VmAftersalesIncentive
@*<h2>AftersalesPm_Incentive_PerPersonSheet</h2>*@

<script src="~/Scripts/FileSaver/jquery.wordexport.js"></script>
<script src="~/Scripts/jquery.table2excel.min.js"></script>

<div class="page-head">
    <div class="page-title">
        <h1>
            Incentive
        </h1>

        <br />

    </div>
    <div class="action">
        <div class="col-md-2">

            <button class="btn green btn-outline btn-circle btn-sm pull-left" onclick="tableToExcel('table2excel', '@Request.Params["Name"]')">
                <i class="fa fa-save"></i>
                Export to Excel
            </button>
        </div>

        <button class="btn green btn-outline btn-circle btn-sm pull-right pdf" id="pdf">
            <i class="fa fa-save"></i>
            Export as PDF
        </button>
    </div>
</div>

<div class="portlet box blue-dark table2excel" id="table2excel">
    <div class="portlet-title">
    </div>
    <div class="portlet-body">
        <div class="table-toolbar">
            <div class="row"></div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="portlet box default">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-cogs"></i>Aftersales PM Incentive
                        </div>

                        <div class="tools">
                            <a title="" data-original-title="" href="javascript:;" class="collapse"> </a>
                            <a title="" data-original-title="" href="#portlet-config" data-toggle="modal" class="config"> </a>
                            <a title="" data-original-title="" href="javascript:;" class="reload"> </a>
                            <a title="" data-original-title="" href="javascript:;" class="remove"> </a>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="col-lg-12" id="PDFWrapper">
                            <br />
                            <div class="col-lg-4"></div>
                            <div class="col-lg-4">
                                <h1 style="text-align: center;font-weight: bold; font-size: 30px;"> WDTIL</h1>
                                <h2 style="text-align: center;font-size: 20px;"> Department : WSMS</h2>
                                <h2 style="text-align: center;font-size: 20px;">  Section : Service Development</h2>
                                <h2 style="text-align: center;font-size: 20px;">  Sub Section : Core</h2>
                                <h2 style="text-align: center;font-size: 20px;"> Incentive Sheet</h2>
                               
                                <h2 style="text-align: center;font-size: 20px;">
                                    @Request.Params["Month"], @Request.Params["Year"]
                                </h2>
                                <h2 style="text-align: center;font-size: 20px;"> Name :  @Request.Params["Name"] <br /> ID : @Request.Params["EmpCode"] </h2>
                            </div>

                            <br /><br /><br />  <br />  <br />
                            <div class="table-scrollable table-responsive">
                                <table class="table table-bordered table-striped table-condensed flip-content tbl11" id="tbl11" style="left: 0px;border: 1px solid black;color:black">
                                    <thead class="flip-content">
                                        <tr style="font-size: 16px;">
                                            <th style="text-align: left; width: 80px; height: 50px; border: 1px solid black"> Title </th>
                                            <th style="text-align: left; width: 80px; height: 50px; border: 1px solid black"> Categories </th>
                                            <th style="text-align: left; width: 80px; height: 50px; border: 1px solid black"> Incident<br />Details </th>
                                            <th style="text-align: left; width: 80px; height: 50px; border: 1px solid black"> Raised<br />Date </th>
                                            <th style="text-align: left; width: 80px; height: 50px; border: 1px solid black"> Solution<br />Date  </th>
                                            <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> DaysPassed </th>
                                            <th style="text-align: left; width: 80px; height: 50px; border: 1px solid black"> EmpName </th>
                                            <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> EmployeeCode </th>
                                            <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> Percentage </th>
                                            <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> Total<br />Amount </th>
                                            <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> Incentive </th>
                                            <th style="text-align: left; width: 80px; height: 50px; border: 1px solid black"> Remarks </th>
                                        </tr>
                                    </thead>
                                    <tbody style="text-align: center;font-size: 14px;">
                                        @if (ViewBag.GetAftersalesPmIncentivePerPerson != null)
                                        {
                                            foreach (var item1 in ViewBag.GetAftersalesPmIncentivePerPerson)
                                            {
                                                <tr class="tableTrCls11" id="trIdForIncentive11">
                                                    <td style="text-align: left; border: 1px solid black;">@item1.GeneralIncidentTitle</td>
                                                    <td style="text-align: left; border: 1px solid black;">@item1.GeneralIncidentCategories</td>
                                                    <td style="text-align: left; border: 1px solid black;">@item1.GeneralIncidentDetails</td>
                                                    <td style="text-align: left; border: 1px solid black;">
                                                        @if (@item1.IssueRaisedDate != null)
                                                        { @String.Format("{0:yyyy-MM-dd}", @item1.IssueRaisedDate)}
                                                    </td>
                                                    <td style="text-align: left; border: 1px solid black;">
                                                        @if (@item1.SolutionDate != null)
                                                        {
                                                            @String.Format("{0:yyyy-MM-dd}", @item1.SolutionDate)
                                                        }
                                                </td>
                                                    <td style="text-align: center; border: 1px solid black;">@item1.DaysPassed</td>
                                                    <td style="text-align: left; border: 1px solid black;">@item1.EmpName</td>
                                                    <td style="text-align: center; border: 1px solid black;">@item1.EmployeeCode</td>
                                                    <td style="text-align: center; border: 1px solid black;">@item1.Percentage</td>
                                                    <td style="text-align: center; border: 1px solid black;">@item1.TotalAmount</td>
                                                    <td style="text-align: center; border: 1px solid black;">@item1.PerPersonAmount</td>
                                                    <td style="text-align: left; border: 1px solid black;">@item1.IncentiveRemarks</td>
                                                </tr>
                                            }
                                        }

                                    </tbody>

                                </table>

                            </div>
                            <br /><br /><br /><br />
                            <div class="col-lg-12">
                                @if (ViewBag.GetTotalFinalIncentiveOfPm != null)
                                {
                                    foreach (var items in ViewBag.GetTotalFinalIncentiveOfPm)
                                    {
                                        <div style="text-align: left;font-size: 20px;">Total Incentive :<span></span><span></span><span></span> @items.PerPersonAmount</div>

                                    }
                                }
                            </div>
                            <br /><br /><br /><br /><br /><br /><br /><br />
                            <div class="col-lg-4">
                                <h4 style="text-align: left;">____________________</h4>
                                <p style="text-align: left;font-size: 20px;font-weight: bold"> Prepared By</p>
                                <p>
                                    @foreach (var item1 in ViewBag.GetPreparedUser)
                                    {
                                        <div style="text-align: left;font-size: 20px;">Name :@item1.UserFullName</div>
                                        <div style="text-align: left;font-size: 20px;">ID :@item1.EmployeeCode</div>
                                    }
                                </p>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <br /><br /><br /><br /><br /><br />

    </div>

</div>


<script>
    $(function () {

    });

    $("#pdf").on("click", function () {
        var divContents = $("#PDFWrapper").html();
        var printWindow = window.open('', '', 'height=400,width=800');
        printWindow.document.write('<html><head><title></title>');
        printWindow.document.write('</head><body >');
        printWindow.document.write(divContents);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    });
    var tableToExcel = (function () {
        var uri = 'data:application/vnd.ms-excel;base64,'
          , template = '<html xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:x="urn:schemas-microsoft-com:office:excel" xmlns="http://www.w3.org/TR/REC-html40"><head><!--[if gte mso 9]><xml><x:ExcelWorkbook><x:ExcelWorksheets><x:ExcelWorksheet><x:Name>{worksheet}</x:Name><x:WorksheetOptions><x:DisplayGridlines/></x:WorksheetOptions></x:ExcelWorksheet></x:ExcelWorksheets></x:ExcelWorkbook></xml><![endif]--></head><body><table>{table}</table></body></html>'
          , base64 = function (s) { return window.btoa(unescape(encodeURIComponent(s))) }
          , format = function (s, c) { return s.replace(/{(\w+)}/g, function (m, p) { return c[p]; }) }

        return function (table, name) {
            if (!table.nodeType) table = document.getElementById(table)
            var ctx = { worksheet: name || 'Worksheet', table: table.innerHTML }
            //window.location.href = uri + base64(format(template, ctx))
            var link = document.createElement("a");
            link.download = '@Request.Params["Name"]' + '_' + '@Request.Params["Month"]' + '_' + '@Request.Params["Year"]' + '.xls';
            link.href = uri + base64(format(template, ctx));
            link.click();
        }
    })()
</script>
