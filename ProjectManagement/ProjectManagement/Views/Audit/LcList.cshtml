@model IEnumerable<ProjectManagement.Models.ProjectLcModel>
    @{
        ViewBag.Title = "LcList";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">

                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">LC List</span>
                    </div>
                    <div class="tools">
                    </div>

                </div>
                <div class="portlet-body">
                    <div class="col-lg-12">
                    </div>
                    <table class="table table-striped table-scrollable table-bordered table-hover dtTable" id="sample_1">
                        <thead>
                            <tr>
                                <th>Project Name</th>
                                <th>Order No</th>
                                <th>PO No</th>
                                <th>Lc No</th>
                                <th>Lc Value</th>
                                <th>PO Date</th>
                                <th>Opening Date</th>
                                <th>Added By</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.OrderNo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PoNo)</td>
                                        <td>@Html.DisplayFor(modelItem => item.LcNo)</td>
                                        <td>
                                            @if (item.LcValue != null)
                                            {
                                                @item.Currency @item.LcValue
                                            } 
                                        </td>
                                        <td>@item.PoDate.ToString("dd-MMM-yyyy")</td>
                                        <td>@if (item.OpeningDate != null)
                                            {
                                                @item.OpeningDate.Value.ToString("dd-MMM-yyyy")
                                            }
                                        </td>
                                        <td>@Html.DisplayFor(modelItem => item.AddedByName)</td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>

                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
            <!-- BEGIN EXAMPLE TABLE PORTLET-->

        </div>
    </div>
