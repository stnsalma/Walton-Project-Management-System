
@{
    ViewBag.Title = "ProjectManagerDashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Welcome!@ViewBag.UserInfo.UserFullName

            @if (ViewBag.UserInfo.RoleName == "PM")
            {
                <small>Head of Project Management</small>

            }
        </h1>
    </div>

</div>



<div class="row">
   
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 red" href="#">
            <div class="visual">
                <i class="fa fa-bar-chart-o"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="@ViewBag.Count.PmRunningProjects"></span>
                </div>
                <div class="desc"> Running Projects  </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a class="dashboard-stat dashboard-stat-v2 green">
            <div class="visual">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-counter="counterup" data-value="">0</span>
                </div>
                <div class="desc"> Completed Projects </div>
            </div>
        </a>
    </div>
