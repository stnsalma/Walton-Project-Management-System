@using System.Web.Mvc.Html
@using Microsoft.Ajax.Utilities
@model ProjectManagement.Models.NinetyFiveProductionRewardModel

@*<h2>PoDetailsPageForPmHead</h2>*@

<div class="row">
   
    <div class="col-sm-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-cogs"></i>Per PO Reward For PM Incharge
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"> </a>
                    <a href="javascript:;" class="reload"> </a>
                </div>
            </div>
            <div class="portlet box green-haze">
                <div class="portlet-body">
                    <div>
                        <table class="table table-bordered table-striped table-condensed flip-content" id="tblPoRewardData" style="overflow-y: auto;overflow-x: auto;width: 400px">
                            <thead>
                                <tr>
                                    <th>ProjectName</th>
                                    <th>Orders</th>
                                    <th>PoDate</th>
                                    <th>PoReward</th>
                                    @*<th>Month</th>
                                        <th>Year</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.GetPoDetailsPageForPmHead != null)
                                {
                                    foreach (var items in ViewBag.GetPoDetailsPageForPmHead)
                                    {
                                        <tr>
                                            <td>@items.ProjectName</td>
                                            <td>@items.Orders</td>
                                            <td>
                                                @if (@items.PoDate != null)
                                                {@String.Format("{0:yyyy-MM-dd}", @items.PoDate)}
                                            </td>
                                            <td>@items.PoReward</td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
