@model ProjectManagement.Models.PmOtaUpdateModel
@{
    ViewBag.Title = "GetOtaUpdateRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="page-head">
    <!-- BEGIN PAGE TITLE -->
    <div class="page-title">
        <h1>
            Welcome!@ViewBag.UserInfo.UserFullName

            @if (ViewBag.UserInfo.RoleName == "PMHEAD")
            {
                <small>Head of Project Management</small>

            }







        </h1>

    </div>

</div>
<div class="portlet box green">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-cogs"></i>Create a OTA Update Request
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse"> </a>

            <a href="javascript:;" class="reload"> </a>
            @*<a href="javascript:;" class="remove"> </a>*@
        </div>
    </div>
    <div class="portlet-body flip-scroll">
     
    @using (Html.BeginForm("SaveOtaUpdateRequest", "ProjectManager", FormMethod.Post))
    {


        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-lg-12">
                   
                        <div class="form-body">
                            
                            
                            
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Project:</label>
                                        <div class="col-md-8">
                                            @Html.DropDownListFor(model => model.ProjectMasterId, new SelectList(ViewBag.Projects, "ProjectMasterId", "ProjectName"), "Select One", new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            
                            </div>

                              
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Running S/W Version</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model=>model.RunningOtaSWVersion, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Current  S/W Version</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.CurrentOtaSwVersion, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <br />
                            
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Start Date</label>
                                        <div class="col-md-8">
                                            @Html.TextBoxFor(model => model.OtaUpdateStartDate, new { @class = "form-control date_picker" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">End Date</label>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(model => model.OtaUpdateEndDate, new { @class = "form-control date_picker" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <br />
                            
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Reason</label>
                                        <div class="col-md-8">
                                            <div class="input-group">
                                                <div class="icheck-list">
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.IsExistingMinorIssue ) Existing Minor Issue
                                                    </label>
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.IsMarketIssue) Market Issue
                                                    </label>
                                                    <label>
                                                        @Html.CheckBoxFor(model => model.IsForCustomerSatisfaction) For Customer Satisfaction
                                                    </label>

                                                </div>
                                                
                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                               
                            </div>
                            
                            <br />
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-md-9">
                                            <input type="submit" class="btn sbold uppercase btn-outline blue" value="Save" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                      

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    
    </div>
</div>



