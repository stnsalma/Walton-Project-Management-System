@using ProjectManagement.Models
@model IList<ProjectManagement.Models.ProjectMasterWithPoCustomModel>

@{
    ViewBag.Title = "SparePartsWorkProgress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-product-hunt"></i>Projects Pending Spare Order
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered" id="tblSpareOrderPending">
                    <thead>
                        <tr>
                            <th class="text-center">Project Name</th>
                            <th class="text-center">Order Number</th>
                            <th class="text-center">Po Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ProjectMasterWithPoCustomModel t in Model)
                        {
                            if (t.IsSpareSubmittedDate == null)
                            {
                                <tr>
                                    <td class="text-center">@t.ProjectName</td>
                                    <td class="text-center">@t.OrderNuber</td>
                                    <td class="text-center">@t.PoDate.Value.ToString("dd MMM yyyy")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus-square"></i>Spare Order Done Projects
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">
            <div class="table-scrollable">
                <table class="table table-striped table-bordered" id="tblSpareOrderDone">
                    <thead>
                        <tr>
                            <th class="text-center">Project Name</th>
                            <th class="text-center">Order Number</th>
                            <th class="text-center">Po Date</th>
                            <th class="text-center">Spare Order Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (ProjectMasterWithPoCustomModel t in Model)
                        {
                            if (t.IsSpareSubmittedDate != null)
                            {
                                <tr>
                                    <td class="text-center">@t.ProjectName</td>
                                    <td class="text-center">@t.OrderNuber</td>
                                    <td class="text-center">@t.PoDate.Value.ToString("dd MMM yyyy")</td>
                                    <td class="text-center">@t.IsSpareSubmittedDate.Value.ToString("dd MMM yyyy")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


