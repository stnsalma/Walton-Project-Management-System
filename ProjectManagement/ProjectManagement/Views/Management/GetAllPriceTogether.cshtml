@model IEnumerable<ProjectManagement.Models.AccessoriesPricesModel>
    @{
        Layout = null;
    }
    <!DOCTYPE HTML>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Prices</title>
    </head>
    <body>
        <div>
            <table class="table table-bordered" id="sample_1">
                <thead>
                    <tr>
                        <th>Accessory</th>
                        <th>Price</th>
                        <th>Currency</th>
                        <th>USD</th>
                    </tr>
                </thead>
                <tbody id="tcBody" class="tcBody">
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.AccessoryName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                                <td>@Html.DisplayFor(modelItem => item.Currency)</td>
                                <td>@item.USDValue.ToString("##.####")</td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" style="text-align:right">Total:</th>
                        <th>@Model.Sum(i => i.USDValue).ToString("##.####")</th>
                    </tr>
                </tfoot>
            </table>

        </div>
       
    </body>
</html>
