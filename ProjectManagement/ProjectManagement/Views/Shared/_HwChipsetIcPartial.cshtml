@using System.Web.Mvc.Html
@model ProjectManagement.ViewModels.Hardware.VmHardwareDetailTest


@using (Html.BeginForm("_HwChipsetIcPartial", "Hardware", FormMethod.Post))
{
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title bold">Project Details</h4>
            </div>
            <div class="modal-body">
                <div class="scroller" style="height: 300px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        <div class="col-md-6">

                            <p>
                                Chipset IcNo/Size
                                @Html.TextBoxFor(model => model.HwChipsetModel.IcNoSize, new {@class = "form-control"})
                            </p>
                            <p>
                                ChipsetVendor
                                @Html.TextBoxFor(model => model.HwChipsetModel.ChipsetVendor, new {@class = "form-control"})
                            </p>
                            <p>
                                PinType
                                @Html.TextBoxFor(model => model.HwChipsetModel.PinType, new {@class = "form-control"})
                            </p>
                            <p>
                                PinType
                                @Html.TextAreaFor(model => model.HwChipsetModel.PinType, new {@class = "form-control"})
                            </p>
                        </div>
                        <div class="col-md-6">

                            <p>
                                Chipset Core
                                @Html.TextBoxFor(model => model.HwChipsetModel.ChipsetCore, new {@class = "form-control"})
                            </p>
                            <p>
                                Chipset Speed
                                @Html.TextBoxFor(model => model.HwChipsetModel.ChipsetSpeed, new {@class = "form-control"})
                            </p>
                            <p>
                                PinNumber
                                @Html.TextBoxFor(model => model.HwChipsetModel.PinNumber, new {@class = "form-control"})
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button"  class="btn btn-success">Save</button>
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                @*<button type="button" class="btn green">Save changes</button>*@
            </div>
        </div>
    </div>
}
