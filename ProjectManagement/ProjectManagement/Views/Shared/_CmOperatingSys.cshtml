@model ProjectManagement.ViewModels.Commercial.VmSpecification
@using (Html.BeginForm("Specification", "Commercial"))
{
    <div class="col-lg-12">
        <div class="form-body">
            <h3 class="form-section">OS</h3>
            @Html.HiddenFor(model => model.PhOperatingSyModel.PhOsId)
            @Html.HiddenFor(model => model.PhOperatingSyModel.ProjectMasterId)
            @Html.HiddenFor(model => model.ProjectMaster.ProjectMasterId)
            @Html.HiddenFor(model => model.TabIdentity, new { @Value = 9 })
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">OS Name*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.PhOperatingSyModel.OsName, new {@class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhOperatingSyModel.OsName, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Os Version*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.PhOperatingSyModel.Version, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhOperatingSyModel.Version, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            @if (Model.PhOperatingSyModel.PhOsId > 0)
                            {
                                <button class="btn sbold uppercase btn-outline blue">Update</button>
                            }
                            else
                            {
                                <button class="btn sbold uppercase btn-outline green">Save</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

