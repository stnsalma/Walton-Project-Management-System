@model ProjectManagement.ViewModels.Commercial.VmSpecification
@using (Html.BeginForm("Specification", "Commercial"))
{
    <div class="col-lg-12">
        @Html.HiddenFor(model => model.ProjectMaster.ProjectMasterId)
        @Html.HiddenFor(model => model.PhTpLcdInfo.PhTpLcdInfoId)
        @Html.HiddenFor(model => model.TabIdentity, new { @Value = 2 })
        <div class="form-body">
            <h3 class="form-section">TP & LCD Information</h3>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Display Size*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(i => i.PhTpLcdInfo.DisplaySize, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.PhTpLcdInfo.DisplaySize, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Display Resolution*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.PhTpLcdInfo.DisplayResulution, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.PhTpLcdInfo.DisplayResulution, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Display Speciality*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(i => i.PhTpLcdInfo.DisplaySpeciality, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.PhTpLcdInfo.DisplaySpeciality, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Tp Vendor*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(i => i.PhTpLcdInfo.TpVendor, new { @class = "form-control", @placeholder="Vendor1, Vendor2, Vendor3" })
                            @Html.ValidationMessageFor(model => model.PhTpLcdInfo.DisplaySpeciality, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">TP Final Vendor</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.PhTpLcdInfo.TpFinalVendor, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">LCD Vendor*</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(i => i.PhTpLcdInfo.LcdVendor, new { @class = "form-control", @placeholder = "Vendor1, Vendor2, Vendor3" })
                            @Html.ValidationMessageFor(model => model.PhTpLcdInfo.LcdVendor, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">LCD Final Vendor</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(i => i.PhTpLcdInfo.LcdFinalVendor, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="col-md-offset-3 col-md-9">
                        @if (Model.PhTpLcdInfo.PhTpLcdInfoId > 0)
                        {
                            <button class="btn sbold uppercase btn-outline blue">Update</button>
                        }
                        else
                        {
                            <button class="btn sbold uppercase btn-outline green">Save</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

}

