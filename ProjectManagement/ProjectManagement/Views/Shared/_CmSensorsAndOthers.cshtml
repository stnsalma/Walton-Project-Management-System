
@model ProjectManagement.ViewModels.Commercial.VmSpecification
@using (Html.BeginForm("Specification", "Commercial"))
{
    <div class="col-lg-12">
        @Html.HiddenFor(model => model.ProjectMaster.ProjectMasterId)
        @Html.HiddenFor(model => model.PhSensorAndOther.PhSensorAndOthersInfoId)
        @Html.HiddenFor(model => model.TabIdentity, new { @Value = 7 })
        <div class="form-body">
            <h3 class="form-section">Sensors & Others Information</h3>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">G-Sensor*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.Gsensor, new SelectList(new[]
                            {
                                
                                new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.Gsensor, string.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">P-Sensor*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.Psensor, new SelectList(new[]
                            {
                               new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.Psensor, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">L-Sensor*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.Lsensor, new SelectList(new[]
                            {
                               
                                new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.Lsensor, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Compass*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.Compass, new SelectList(new[]
                            {
                                
                                new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.Compass, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Gyroscope*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.Gyroscope, new SelectList(new[]
                            {
                                
                                new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.Gyroscope, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Hall Sensor*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.HallSensor, new SelectList(new[]
                            {
                                
                                new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.HallSensor, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                
                </div>
            
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">OTG*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.Otg, new SelectList(new[]
                            {
                                
                                new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.Otg, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">GPS*</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(model => model.PhSensorAndOther.Gps, new SelectList(new[]
                            {
                                
                                new SelectListItem { Text = "Yes", Value = "true"},
                                new SelectListItem { Text = "No", Value = "false"}
                            }, "Value", "Text"), new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.PhSensorAndOther.Gps, String.Empty, new { @style = "color:red;!important" })
                        </div>
                    </div>

                </div>
            </div>
            <br/>
            <div class="row">
            
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="control-label col-md-3">Special Sensor(If Any)</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(model=>model.PhSensorAndOther.SpecialSensor, new{@class="form-control"})
                        </div>
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-6">
                    <div class="col-md-offset-3 col-md-9">
                        @if (Model.PhSensorAndOther.PhSensorAndOthersInfoId > 0)
                        {
                            <button class="btn sbold uppercase btn-outline blue">Update</button>
                        }
                        else
                        {
                            <button class="btn sbold uppercase btn-outline green">Save</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

