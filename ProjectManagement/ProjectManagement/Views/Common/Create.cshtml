@model ProjectManagement.Models.CommonIssueModel
           

@using (Html.BeginForm("Create", "Common", new AjaxOptions { OnBegin = "submit" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

        </button>
        <h4 class="modal-title" id="myModalLabel">Create New Issue</h4>

    </div>
    <div class="modal-body">
        <div class="form-group form-md-line-input form-md-floating-label has-info">
            @Html.DropDownListFor(model => model.ProjectMasterId, new SelectList(ViewBag.Projects, "ProjectMasterId", "ProjectName"), "Select One", new { @class = "form-control edited" })
            <label for="ProjectMasterId">Project</label>
        </div>
        
        <div class="form-group form-md-line-input form-md-floating-label has-info">
            @Html.DropDownListFor(model => model.CurrentlyWorkingRole, new SelectList(new[]
            {
                new SelectListItem { Text = "Commercial", Value = "CM"},
                new SelectListItem { Text = "Hardware", Value = "HW"},
                new SelectListItem { Text = "Project Manager", Value = "PM"},
                new SelectListItem { Text = "Management", Value = "MM"},
                new SelectListItem { Text = "Software", Value = "HW"}
            }, "Value", "Text"), new { @class = "form-control edited" })
            <label for="CurrentlyWorkingRole">Issue For</label>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label has-info">

            @Html.TextAreaFor(model => model.IssueTitle, new { @class = "form-control  input-sm" })
            <label for="IssueTitle">Title</label>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label has-info">

            @Html.TextBoxFor(model => model.Component, new { @class = "form-control  input-sm" })
            <label for="Component">Component</label>
        </div>
        <div class="form-group form-md-line-input form-md-floating-label has-info">

            @Html.TextAreaFor(model => model.Description, new { @class = "form-control  input-sm" })
            <label for="Description">Description</label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
}
