@model ProjectManagement.Models.CommonIssueModel


@using (Html.BeginForm("Deny", "Common", new AjaxOptions { OnBegin = "submit" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>

        </button>
        <h4 class="modal-title" id="myModalLabel">Deny Issue</h4>

    </div>
    <div class="modal-body">
        @Html.HiddenFor(model => model.CommonIssueId)
        <div class="form-group form-md-line-input form-md-floating-label has-info">

            @Html.TextAreaFor(model => model.IgnoreComment, new { @class = "form-control  input-sm"})
            <label for="IssueTitle">Please Write why you are Ignoring this Issue</label>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
}

