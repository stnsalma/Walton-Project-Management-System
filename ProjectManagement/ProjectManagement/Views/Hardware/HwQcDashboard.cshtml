            var url = '@Url.Action("HwTestNavigation", "Hardware")?hwqcassignId=' + hwqcassignid + '&hwqcinchargeassignId=' + hwqcinchargeassignId + '&projectName=' + encodeURIComponent(projectName);
            window.location.href = url;
        }

    });

