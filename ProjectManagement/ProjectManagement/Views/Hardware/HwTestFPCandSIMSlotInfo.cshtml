                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.HwTestFPCandSIMSlotInfoModel.Comment, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.HwTestFPCandSIMSlotInfoModel.Comment, new { @class = "form-control", @rows = 3 })
                                        @Html.ValidationMessageFor(model => model.HwTestFPCandSIMSlotInfoModel.Comment)
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-md-2">File Upload</label>
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.HwTestFPCandSIMSlotInfoModel.HwQcDocUpload, new { type = "file", @class = "form-control" })
                                    </div>
                                </div>
                                <div class="file-preview-thumbnails col-md-offset-2">
                                    <div class="container-fluid">
                                        <div class="file-preview-frame file-preview-initial" id="preview-1475130072371-init_0" data-fileindex="init_0" data-template="image">
                                            <div class="">
                                                @if (@Model.HwTestFPCandSIMSlotInfoModel == null || @Model.HwTestFPCandSIMSlotInfoModel.QcDocUploadPath == null || @Model.HwTestFPCandSIMSlotInfoModel.QcDocUploadPath == "../Content/UploadImage/")
                                                {
                                                    <img src="~/assets/layouts/layout4/img/no-image.png" class=" file-preview-image img-responsive" title="" alt="" style="width: 330px; height: 160px;" />
                                                }
                                                else if (@Model.HwTestFPCandSIMSlotInfoModel.ImageExtension == ".jpg" || @Model.HwTestFPCandSIMSlotInfoModel.ImageExtension == ".png" || @Model.HwTestFPCandSIMSlotInfoModel.ImageExtension == ".jpeg")
                                                {
                                                    <img src="@Model.HwTestFPCandSIMSlotInfoModel.QcDocUploadPath" class=" file-preview-image img-responsive" title="" alt="" style="width:auto;height:160px;" />
                                                }
                                                else if (@Model.HwTestFPCandSIMSlotInfoModel.ImageExtension == ".pdf")
                                                {
                                                    <embed class="file-preview-image img-responsive" id="filePath" src="@Model.HwTestFPCandSIMSlotInfoModel.QcDocUploadPath" width="auto" height="400px" type="application/pdf" />
                                                }
                                            </div>
                                            <div class="file-thumbnail-footer">

                                                <div class="file-actions">
                                                    <div class="file-footer-buttons">

                                                        <button type="button" class="btn btn-xs btn-default btnFilePreview" title="View Details" id="btnFilePreviewBootImage"><i class="glyphicon glyphicon-search "></i></button>
                                                    </div>

                                                    <div class="clearfix"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        @if (@ViewBag.HwTestCustomModel.HwTestFpcConnectionAndSIMSlotInfoId == null)
                                        {
                                            <input type="submit" value="Save" class="btn btn-default" id="btnsave" />
                                        }
                                        else
                                        {
                                            <input type="submit" value="Update" class="btn btn-default" id="btnupdate" />
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>


}

