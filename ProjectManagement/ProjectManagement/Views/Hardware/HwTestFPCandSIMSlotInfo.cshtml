                                    @Html.ValidationMessageFor(model => model.HwTestMstr_HwTestMstrId)
                                </div>
                            </div>*@
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("FPC For Power", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.HwTestFPCandSIMSlotInfoModel.FPC_ForPower, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.HwTestFPCandSIMSlotInfoModel.FPC_ForPower)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("Volume Switch", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.HwTestFPCandSIMSlotInfoModel.FPC_ForVolumeSwitch, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.HwTestFPCandSIMSlotInfoModel.FPC_ForVolumeSwitch)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.Label("Sim Slot", new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.HwTestFPCandSIMSlotInfoModel.SIMSlot, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.HwTestFPCandSIMSlotInfoModel.SIMSlot)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.HwTestFPCandSIMSlotInfoModel.Recommendation, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(model => model.HwTestFPCandSIMSlotInfoModel.Recommendation, new { @class = "form-control", @rows = 3 })
