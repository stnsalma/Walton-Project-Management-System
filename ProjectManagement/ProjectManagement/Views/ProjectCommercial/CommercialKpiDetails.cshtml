            }],
            "paging": false,
            //"order": [[3, 'desc']]
        });
        
       // var kk = Request.QueryString[2];

        if ('@Request.QueryString["kpiName"]' == "Iqc")
         {
             document.getElementById("material").style.display = "none";
        }
    });
