@model IEnumerable<ProjectManagement.Models.BtrcRawListModel>
    @{
        ViewBag.Title = "BtrcList";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <div class="col-lg-3">
                        <div class="caption font-dark">
                            <i class="icon-settings font-dark"></i>
                            <span class="caption-subject bold uppercase">Btrc NOC List</span>
                        </div>
                        <div class="tools"> </div>
                    </div>
                    <div class="col-lg-2">
                        @Html.ActionLink("Create New", "Btrc")
                    </div>

                </div>
                <div class="portlet-body">
                    <div class="col-lg-12">
                        @{
                            if (TempData["message"] != null)
                            {
                                var msgType = TempData["messageType"];
                                var msg = TempData["message"];
                                if ((int)msgType == 1)
                                {
                                    <div class="alert alert-success alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                        <strong>Message:</strong> @msg
                                    </div>
                                }
                                else if ((int)msgType == 2)
                                {
                                    <div class="alert alert-danger alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                        <strong>Message:</strong> @msg
                                    </div>
                                }
                                else if ((int)msgType == 3)
                                {
                                    <div class="alert alert-info alert-dismissable">
                                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                        <strong>Message:</strong> @msg
                                    </div>
                                }
                            }
                        }
                    </div>
                    <table class="table table-striped table-scrollable table-bordered dtTable" id="sample_1">

                        <thead>
                            <tr>
                                <th>Application ID</th>
                                <th>Model</th>
                                <th>Order</th>
                                <th>PO NO.</th>
                                <th>NOC NO.</th>
                                <th>NOC Apply Dt.</th>
                                <th>Appx Receive Dt.</th>
                                <th>Receive Dt.</th>
                                <th>Issue Dt.</th>
                                <th>Validity Dt.</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ApplicationId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProjectName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OrderNumberOrdinal)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PurchaseOrderNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NocNo)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.NocApplyDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.AppxNocReceiveDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NocReceiveDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NocIssueDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NocValidityDate)
                                    </td>
                                    @*<td>
                                        @Html.ActionLink("Edit", "Babt", new { id = item.NocIssueDate })
                                        
                                    </td>*@
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>

