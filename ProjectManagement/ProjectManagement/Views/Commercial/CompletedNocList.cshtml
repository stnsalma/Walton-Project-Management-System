@using System.Web.Mvc.Html
@model IEnumerable<ProjectManagement.ViewModels.Commercial.VmCompletedNoc>

@{
    ViewBag.Title = "CompletedNocList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CompletedNocList</h2>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="col-lg-2">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Shipment List</span>
                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="col-lg-2">
                    @Html.ActionLink("Create New", "CreateSupplier")
                </div>

            </div>
            <div class="portlet-body">
                <div class="col-lg-12">
                    @{
                        if (TempData["message"] != null)
                        {
                            var msgType = TempData["messageType"];
                            var msg = TempData["message"];
                            if ((int)msgType == 1)
                            {
                                <div class="alert alert-success alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <strong>Message:</strong> @msg
                                </div>
                            }
                            else if ((int)msgType == 2)
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <strong>Message:</strong> @msg
                                </div>
                            }
                            else if ((int)msgType == 3)
                            {
                                <div class="alert alert-info alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <strong>Message:</strong> @msg
                                </div>
                            }
                        }
                    }
                </div>
                <table class="table table-striped table-scrollable table-bordered dtTable" id="sample_1">

                    <thead>
                        <tr>
                            <th>Project Name</th>
                            <th>NOC No</th>
                            <th>Remaining Quantity</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProjectName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NocNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RemainingQuantity)
                                </td>
                                <td>
                                    @Html.ActionLink("Set IMEI Range", "SetImeiRange", new { projectId = item.ProjectMasterId, btrcRawid = item.BtrcRawId, orderId = item.PurchaseOrderId })
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
        <!-- BEGIN EXAMPLE TABLE PORTLET-->

    </div>
</div>
