@using System.Web.Mvc.Html




@{
    ViewBag.Title = "Index";
}

<div class="page-head">
    <div class="page-title">
        <h1>
            Welcome! @ViewBag.UserInfo.UserFullName
            @*<small>only projects which passed QC</small>*@
        </h1>
    </div>
</div>

<div class="note note-success">
    <i class="fa fa-tachometer"></i> <label class="bold">Commercial Dashboard</label>
    <i class="icon-calendar pull-right"><label ng-model="date" class="bold uppercase">&nbsp; @DateTime.Now.ToString("dd MMM yyyy")</label></i>
</div>

<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="screening">
        <a onclick="location.href = '@Url.Action("SampleSetApprovalDecision", "Management")'" class="dashboard-stat dashboard-stat-v2 blue">
            <div class="visual">
                <i class="fa fa-comments"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-value="@ViewBag.MmDashboardConter.InitialApprovalPending" data-counter="counterup"></span>
                </div>
                <div class="desc screening"> Initial Approval Pending </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a onclick="location.href='#'" class="dashboard-stat dashboard-stat-v2 red">
            <div class="visual">
                <i class="fa fa-bar-chart-o"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-value="@ViewBag.MmDashboardConter.FinalApprovalPending" data-counter="counterup"></span>
                </div>
                <div class="desc running"> Final Approval Pending </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a onclick="location.href='#'" class="dashboard-stat dashboard-stat-v2 green">
            <div class="visual">
                <i class="fa fa-shopping-cart"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-value="@ViewBag.MmDashboardConter.TotalApproved" data-counter="counterup"></span>
                </div>
                <div class="desc"> Total Final Approved </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
        <a onclick="location.href='@Url.Action("RejectedProjectList", "Common")'" class="dashboard-stat dashboard-stat-v2 purple">
            <div class="visual">
                <i class="fa fa-globe"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-value="@ViewBag.MmDashboardConter.Rejected" data-counter="counterup"></span>
                </div>
                <div class="desc"> Rejected </div>
            </div>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12" id="divSwot">
        <a href="#" class="dashboard-stat dashboard-stat-v2 purple">
            <div class="visual">
                <i class="fa fa-globe"></i>
            </div>
            <div class="details">
                <div class="number">
                    <span data-value="@ViewBag.MmDashboardConter.SwotAnalysisPending" data-counter="counterup"></span>
                </div>
                <div class="desc"> SWOT Analysis Pending </div>
            </div>
        </a>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        @Html.Partial("~/Views/Shared/_UserOpinion.cshtml")
    </div>

</div>

<script>
    $(function() {
        $('#divSwot').on('click', function() {
            var url = '@Url.Action("SwotAnalysis","Common")';
            console.log(url);
            window.location.href=url;
        });
    });
</script>





