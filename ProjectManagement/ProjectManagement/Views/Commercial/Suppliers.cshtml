@model IEnumerable<ProjectManagement.Models.SupplierModel>

@{
    ViewBag.Title = "Suppliers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<div id='gameModal' class='modal hide fade in' data-url='@Url.Action("Create")'>

    </div>*@
<!-- Modal -->
<div class="modal fade" id="gameModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="vertical-alignment-helper">
        <div class="modal-dialog vertical-align-center">
            <div class="modal-content">
                <div id='gameContainer'>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="col-lg-2">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">Shipment List</span>
                    </div>
                    <div class="tools"> </div>
                </div>
                <div class="col-lg-2">
                    @Html.ActionLink("Create New", "CreateSupplier")
                </div>

            </div>
            <div class="portlet-body">
                <div class="col-lg-12">
                    @{
                        if (TempData["message"] != null)
                        {
                            var msgType = TempData["messageType"];
                            var msg = TempData["message"];
                            if ((int)msgType == 1)
                            {
                                <div class="alert alert-success alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <strong>Message:</strong> @msg
                                </div>
                            }
                            else if ((int)msgType == 2)
                            {
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <strong>Message:</strong> @msg
                                </div>
                            }
                            else if ((int)msgType == 3)
                            {
                                <div class="alert alert-info alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
                                    <strong>Message:</strong> @msg
                                </div>
                            }
                        }
                    }
                </div>
                <table class="table table-striped table-scrollable table-bordered dtTable" id="sample_1">

                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SupplierAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "CreateSupplier", new { id = item.SupplierId }) @*| @Html.ActionLink("Delete", "Delete", new { id = item.SupplierId })*@
                                </td>
                            </tr>
                        }
                    </tbody>


                </table>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
        <!-- BEGIN EXAMPLE TABLE PORTLET-->

    </div>
</div>


<script type="text/javascript">
   
    function goToController(url) {
        $(function () {
            $.get(url, function (data) {
                console.log(data);
                $('#gameContainer').html(data);
                $('#gameModal').modal('show');
            });
        });
    }

</script>

