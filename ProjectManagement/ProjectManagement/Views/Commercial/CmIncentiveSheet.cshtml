                            {
                                Text = "2029",
                                Value = "2029"
                            });
                            listItems2.Add(new SelectListItem
                            {
                                Text = "2030",
                                Value = "2030"
                            });
                        }
                        @Html.DropDownList("DDDYear", new SelectList(listItems2, "Value", "Text"), "SELECT YEAR", new { @class = "form-control DDDYearCls" })
                    </div>

                </div>
                
                <div class="col-lg-5">
                    <div class="col-md-6" style="text-align: center">
                        <input class="btn sbold uppercase btn-outline blue" type="submit" id="btnPrintForTopSheet" value="Print Top Sheet" />
                    </div>
                    <div class="col-md-6" style="text-align: center">
                        <input type="button" id="btnforname" class="btn sbold uppercase btn-outline red" value="Show Incentive Policy" />

                    </div>
                </div>
                
            </div>

        </div>
        <br /><br /><br />

        <div>
        </div>

    </div>
</div>

<script>

    $(function () {

        $("#btnPrintForTopSheet").on('click', function (e) {
            e.preventDefault();
            var monthName = $('#DDDMonth option:selected').text();
            var monthNum = $('#DDDMonth option:selected').val();
            var yearName = $('#DDDYear option:selected').text();

            if (monthName == "SELECT MONTH") {

                alertify.dialog('alert').set({
                    'title': '   ',
                    'transition': 'zoom',
                    'message': "Please must select Month",
                }).show();
                return false;
            }
            if (yearName == "SELECT YEAR") {

                alertify.dialog('alert').set({
                    'title': '   ',
                    'transition': 'zoom',
                    'message': "Please must select Year",
                }).show();
                return false;
            }

            window.open('@Url.Action("IncentiveReport", "Commercial")' + '?monId=' + monthNum + '&month=' + monthName + '&yearId=' + yearName);
        });
        

        $('#btnforname').on('click', function (e) {
            e.preventDefault();
            var monthName = $('#DDDMonth option:selected').text();
            var monthNum = $('#DDDMonth option:selected').val();
            var yearName = $('#DDDYear option:selected').text();

            if (monthName == "SELECT MONTH") {

                alertify.dialog('alert').set({
                    'title': '   ',
                    'transition': 'zoom',
                    'message': "Please must select Month",
                }).show();
                return false;
            }
            if (yearName == "SELECT YEAR") {

                alertify.dialog('alert').set({
                    'title': '   ',
                    'transition': 'zoom',
                    'message': "Please must select Year",
                }).show();
                return false;
            }
            window.open('@Url.Action("MonthlyIncentiveDetails", "Commercial")' + '?monId=' + monthNum + '&yearId=' + yearName);
        });
    });
</script>



