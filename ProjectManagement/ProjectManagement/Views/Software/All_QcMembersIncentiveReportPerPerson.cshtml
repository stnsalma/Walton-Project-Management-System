
@*<h2>All_QcMembersIncentiveReportPerPerson</h2>*@

@model IEnumerable<ProjectManagement.Models.Custom_Sw_IncentiveModel>

    <script src="~/Scripts/FileSaver/jquery.wordexport.js"></script>
    <script src="~/Scripts/jquery.table2excel.min.js"></script>

    <div class="page-head">
        <div class="page-title">
            <h1>
                Incentive
            </h1>

            <br />

        </div>
        <div class="action">
            <div class="col-md-2">
                @*<input type="button" onclick="tableToExcel('table2excel', 'W3C Example Table')" value="Export to Excel">*@

                <button class="btn green btn-outline btn-circle btn-sm pull-left" onclick="tableToExcel('table2excel', '@Request.Params["Name"]')">
                    <i class="fa fa-save"></i>
                    Export to Excel
                </button>
            </div>

            <button class="btn green btn-outline btn-circle btn-sm pull-right pdf" id="pdf">
                <i class="fa fa-save"></i>
                Export as PDF
            </button>
        </div>
    </div>

    <div class="portlet box blue-dark table2excel" id="table2excel">
        <div class="portlet-title">


        </div>
        <div class="portlet-body">


            <div class="table-toolbar">
                <div class="row"></div>
            </div>
            <div class="row">

                <div class="col-lg-12">
                    <div class="portlet box default">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-cogs"></i>Software Qc Incentive
                            </div>

                            <div class="tools">
                                <a title="" data-original-title="" href="javascript:;" class="collapse"> </a>
                                <a title="" data-original-title="" href="#portlet-config" data-toggle="modal" class="config"> </a>
                                <a title="" data-original-title="" href="javascript:;" class="reload"> </a>
                                <a title="" data-original-title="" href="javascript:;" class="remove"> </a>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <div class="col-lg-12" id="PDFWrapper">
                                <br /><br /><br />
                                <div class="col-lg-4"></div>

                                <div class="col-lg-4">
                                    <h1 style="text-align: center;font-weight: bold; font-size: 30px;"> WDTIL</h1>
                                    <h2 style="text-align: center;font-size: 20px;"> Department : QC</h2>
                                    <h2 style="text-align: center;font-size: 20px;">  Section : Software QA</h2>
                                    <h2 style="text-align: center;font-size: 20px;"> Incentive Sheet</h2>
                                  
                                    <h2 style="text-align: center;font-size: 20px;">
                                        @Request.Params["Month"], @Request.Params["Year"]
                                    </h2>
                                    <h2 style="text-align: center;font-size: 20px;"> Name :  @Request.Params["Name"] <br /> ID : @Request.Params["EmpCode"] </h2>
                                </div>

                                <br /><br />
                                <div class="table-scrollable table-responsive">
                                    <table class="table table-bordered table-striped table-condensed flip-content tbl11" id="tbl11" style="left: 0px;border: 2px solid black;color:black">
                                        <thead class="flip-content">
                                            <tr style="font-size: 16px;">
                                                <th style="text-align: center; border-width: 2px; border-color: black; width: 200px; height: 50px;border: 1px solid black"> ProjectName </th>
                                                <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> Ver.Name </th>
                                                <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> Ver.No. </th>
                                                <th style="text-align: center; width: 100px; height: 50px; border: 1px solid black"> Incentive<br />Claim<br />Area </th>
                                                <th style="text-align: center; width: 80px; height: 50px; border: 1px solid black"> Assigned<br /> Persons </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Critical </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Major </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Minor </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Base<br />Amount </th>
                                                <th style="text-align: center; width: 100px; height: 50px; border: 1px solid black">S_Date</th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black">E_Date</th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black">Date<br />Diff</th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black">Timeline</th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Issue<br />Amount </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Added<br />Amount </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Remarks </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Deduction </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Percentage </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Deduction<br />Remarks </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Total<br />Amount </th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Particular<br />Persons<br />Incentive <br/>/Penalties</th>
                                                <th style="text-align: center;width: 100px;height: 50px;border: 1px solid black"> Incentive<br />Types </th>
                                            </tr>
                                        </thead>
                                        <tbody style="text-align: center;font-size: 14px;">
                                            @foreach (var item1 in Model)
                                            {
                                                <tr class="tableTrCls11" id="trIdForIncentive11" style="border: 1px solid black">
                                                    <td style="border: 1px solid black;text-align: left">@item1.ProjectName</td>
                                                    <td style="border: 1px solid black;text-align: left">@item1.SoftwareVersionName</td>
                                                    <td style="border: 1px solid black">@item1.SoftwareVersionNumber</td>
                                                    <td style="border: 1px solid black; text-align: left">@item1.IncentiveClaimArea</td>
                                                    <td style="border: 1px solid black">@item1.AssignedPersons</td>
                                                    <td style="border: 1px solid black">@item1.Critical</td>
                                                    <td style="border: 1px solid black">@item1.Major</td>
                                                    <td style="border: 1px solid black">@item1.Minor</td>
                                                    <td style="border: 1px solid black">@item1.BaseAmount</td>
                                                    <td style="border: 1px solid black">
                                                        @if (@item1.StartDate != null)
                                                        {
                                                            @String.Format("{0:yyyy-MM-dd hh:mm:ss tt}", @item1.StartDate)
                                                        }
                                                    </td>
                                                    <td style="border: 1px solid black">
                                                        @if (@item1.EndDate != null)
                                                        {
                                                            @String.Format("{0:yyyy-MM-dd hh:mm:ss tt}", @item1.EndDate)
                                                        }
                                                    </td>
                                                    <td style="border: 1px solid black">@item1.DateDiffWithHoliday</td>
                                                    <td style="border: 1px solid black">@item1.Timeline</td>
                                                    <td style="border: 1px solid black">@item1.IssueAmount</td>
                                                    <td style="border: 1px solid black">@item1.AddedAmount</td>
                                                    <td style="border: 1px solid black">@item1.AddAmountRemarks</td>
                                                    <td style="border: 1px solid black">@item1.Deduction</td>
                                                    <td style="border: 1px solid black">@item1.PenaltiesPercentage</td>
                                                    <td style="border: 1px solid black">@item1.DeductionRemarks</td>
                                                    <td style="border: 1px solid black">@item1.TotalAmount</td>
                                                    <td style="border: 1px solid black">@item1.ParticularPersonIncentive</td>
                                                    <td style="border: 1px solid black">@item1.Types</td>
                                                </tr>
                                            }

                                        </tbody>

                                    </table>

                                </div>
                                <br /><br /><br /><br />
                                <div class="col-lg-12">
                                    @foreach (var items in ViewBag.GetTotalFinalIncentiveOfSw)
                                    {
                                        <div style="text-align: left;font-size: 20px;">Total Incentive :<span></span><span></span><span></span> @items.FinalAmount1</div>

                                    }
                                </div>
                                <br /><br />
                                <div class="col-lg-4">
                                    <h4 style="text-align: left;">____________________</h4>
                                    <p style="text-align: left;font-size: 20px;"> Prepared By</p>
                                    <p>
                                        @foreach (var item1 in ViewBag.GetPreparedUser)
                                        {
                                            <div style="text-align: left;font-size: 20px;">Name :@item1.UserFullName</div>
                                            <div style="text-align: left;font-size: 20px;">ID :@item1.EmployeeCode</div>
                                        }
                                    </p>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>




            <br /><br /><br /><br /><br /><br />

        </div>

    </div>


    <script>
        $(function () {

            var earlierOrLateShipment;

            $("#tbl11 tr.tableTrCls11").each(function () {
                // earlierOrLateShipment = $(this).find('#earlierOrLateShipment').val();
                earlierOrLateShipment = $(this).find('td:eq(5)').text();
                if (earlierOrLateShipment > 0) {

                    earlierOrLateShipment = $(this).find('#earlierOrLateShipment').text(earlierOrLateShipment + " " + "days late");
                }
                else if (earlierOrLateShipment < 0) {
                    earlierOrLateShipment = $(this).find('#earlierOrLateShipment').text(earlierOrLateShipment + " " + "days earlier");
                } else {
                    earlierOrLateShipment = $(this).find('#earlierOrLateShipment').text("");
                }

                console.log("earlierOrLateShipment  :" + earlierOrLateShipment);
            });

        });

        $("#pdf").on("click", function () {
            var divContents = $("#PDFWrapper").html();
            var printWindow = window.open('', '', 'height=400,width=800');
            printWindow.document.write('<html><head><title></title>');
            printWindow.document.write('</head><body >');
            printWindow.document.write(divContents);
            printWindow.document.write('</body></html>');
            printWindow.document.close();
            printWindow.print();
        });
        var tableToExcel = (function () {
            var uri = 'data:application/vnd.ms-excel;base64,'
              , template = '<html xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:x="urn:schemas-microsoft-com:office:excel" xmlns="http://www.w3.org/TR/REC-html40"><head><!--[if gte mso 9]><xml><x:ExcelWorkbook><x:ExcelWorksheets><x:ExcelWorksheet><x:Name>{worksheet}</x:Name><x:WorksheetOptions><x:DisplayGridlines/></x:WorksheetOptions></x:ExcelWorksheet></x:ExcelWorksheets></x:ExcelWorkbook></xml><![endif]--></head><body><table>{table}</table></body></html>'
              , base64 = function (s) { return window.btoa(unescape(encodeURIComponent(s))) }
              , format = function (s, c) { return s.replace(/{(\w+)}/g, function (m, p) { return c[p]; }) }

            return function (table, name) {
                if (!table.nodeType) table = document.getElementById(table)
                var ctx = { worksheet: name || 'Worksheet', table: table.innerHTML }
                //window.location.href = uri + base64(format(template, ctx))
                var link = document.createElement("a");
                link.download = '@Request.Params["Name"]' + '_' + '@Request.Params["Month"]' + '_' + '@Request.Params["Year"]' + '.xls';
                link.href = uri + base64(format(template, ctx));
                link.click();
            }
        })()

        $(function () {
            $("body:first").addClass("page-sidebar-closed");
            $("ul.page-sidebar-menu").addClass("page-sidebar-menu-closed");
        });
    </script>


